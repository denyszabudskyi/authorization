.btn
  text-decoration none
  border-radius 4px
  text-align center
  transition 0.4s
  display flex
  align-items center
  justify-content center

.btn--size-md
  font-size 14px
  height: 40px

.btn--size-lg
  font-size 14px
  height: 40px
  width: 100%

.btn__text
  display inline-flex
  align-items center

.btn--theme-sun
  cursor pointer
  background #ff9000
  border none
  font-weight 600
  color white

.btn--theme-sun:hover, .btn--theme-sun:active, .btn--theme-sun:focus
  background #ffb14c

.btn--theme-social
  border 1px solid #d4d4d4
  margin 4px 0
  .btn__text
    font-weight 600
    color #2c2c2c
    svg
      flex 0 0 21px
      margin-right 10px

.btn--theme-social:hover, .btn--theme-social:active, .btn--theme-social:focus
  background #f9f9f9
  border-color #aaa

@media only screen and (min-width: 600px)
  .btn--theme-social
    margin 0
  .btn--size-md
    flex-basis 136px